.search-page {
  min-height: 100vh;
  background: #F8F9FA;
}

.search-container {
  min-height: 100vh;
}

/* 自定义导航栏 */
.custom-nav {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 1000;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.1);
}

.nav-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 32rpx;
}

.nav-back {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
  margin-right: 20rpx;
}

.nav-back:active {
  background: #f0f0f0;
}

.back-icon {
  font-size: 40rpx;
  color: #1a1a1a;
  font-weight: 300;
}

.search-input-container {
  flex: 1;
  display: flex;
  align-items: center;
  background: #f8f9fa;
  border-radius: 30rpx;
  padding: 0 24rpx;
  margin-right: 20rpx;
}

.search-input {
  flex: 1;
  height: 60rpx;
  font-size: 28rpx;
  color: #1a1a1a;
}

.search-input::placeholder {
  color: #999;
}

.search-icon {
  font-size: 32rpx;
  padding: 16rpx;
}

.nav-actions {
  display: flex;
  align-items: center;
}

.nav-btn {
  padding: 16rpx 24rpx;
  transition: all 0.3s ease;
}

.nav-btn:active {
  opacity: 0.7;
}

.btn-text {
  font-size: 28rpx;
  color: #1a1a1a;
  font-weight: 500;
}

/* 热门搜索 */
.hot-search-section {
  background: white;
  border-radius: 20rpx;
  margin: 24rpx;
  padding: 32rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1a1a1a;
}

.clear-history {
  padding: 12rpx 20rpx;
  background: #f8f9fa;
  border-radius: 16rpx;
  transition: all 0.3s ease;
}

.clear-history:active {
  background: #e9ecef;
}

.clear-text {
  font-size: 24rpx;
  color: #666;
}

.hot-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.tag-item {
  display: flex;
  align-items: center;
  padding: 16rpx 24rpx;
  background: #f8f9fa;
  border-radius: 20rpx;
  transition: all 0.3s ease;
}

.tag-item:active {
  background: #e9ecef;
  transform: scale(0.95);
}

.tag-text {
  font-size: 28rpx;
  color: #1a1a1a;
  margin-right: 12rpx;
}

.tag-count {
  font-size: 22rpx;
  color: #999;
}

/* 搜索历史 */
.search-history-section {
  background: white;
  border-radius: 20rpx;
  margin: 24rpx;
  padding: 32rpx;
}

.history-list {
  display: flex;
  flex-direction: column;
}

.history-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.history-item:last-child {
  border-bottom: none;
}

.history-text {
  font-size: 28rpx;
  color: #1a1a1a;
  flex: 1;
}

.delete-history {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.delete-history:active {
  background: #f0f0f0;
}

.delete-icon {
  font-size: 32rpx;
  color: #999;
}

/* 搜索结果 */
.search-result-section {
  background: white;
  border-radius: 20rpx;
  margin: 24rpx;
}

.result-tabs {
  display: flex;
  border-bottom: 1rpx solid #f0f0f0;
}

.tab-item {
  flex: 1;
  padding: 24rpx 0;
  text-align: center;
  position: relative;
  transition: all 0.3s ease;
}

.tab-item.active .tab-name {
  color: #007AFF;
  font-weight: 600;
}

.tab-name {
  font-size: 30rpx;
  color: #666;
  transition: all 0.3s ease;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  background: #007AFF;
  border-radius: 2rpx;
}

.result-list {
  padding: 0 24rpx;
}

/* 加载状态 */
.loading-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 120rpx 0;
}

.loading-spinner {
  width: 48rpx;
  height: 48rpx;
  border: 4rpx solid #f0f0f0;
  border-top: 4rpx solid #007AFF;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 24rpx;
}

.loading-text {
  font-size: 28rpx;
  color: #999;
}

/* 空结果 */
.empty-result {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 160rpx 0;
  text-align: center;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 32rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 32rpx;
  color: #666;
  margin-bottom: 16rpx;
}

.empty-desc {
  font-size: 28rpx;
  color: #999;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}