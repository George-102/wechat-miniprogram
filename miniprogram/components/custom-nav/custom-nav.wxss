.custom-nav {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 9999;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.1);
}

.nav-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 44px;
  padding: 0 32rpx;
}

.nav-left, .nav-right {
  flex: 1;
  display: flex;
  align-items: center;
}

.nav-right {
  justify-content: flex-end;
}

.nav-center {
  flex: 2;
  display: flex;
  align-items: center;
  justify-content: center;
}

.nav-back {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.nav-back:active {
  background: rgba(0, 0, 0, 0.1);
}

.back-icon {
  font-size: 40rpx;
  color: #1a1a1a;
  font-weight: 300;
}

.nav-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #1a1a1a;
  text-align: center;
}